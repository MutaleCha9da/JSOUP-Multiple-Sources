<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/md_cyan_50"
            app:contentPadding="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_share_price"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/fa_icon_trading"
                    android:textSize="60sp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/fa_solid"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/tv_share_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Share Price"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"
                    android:background="@color/md_cyan_100"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/commentary"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/md_teal_50"
            app:contentPadding="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_daily_commentary"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/fa_icon_commentary"
                    android:textSize="60sp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/fa_solid"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/tv_daily_commentary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Daily Commentary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"
                    android:background="@color/md_teal_100"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/news"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/md_light_blue_50"
            app:contentPadding="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_news_headlines"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/fa_icon_headlines"
                    android:textSize="60sp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/fa_solid"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/tv_news_headlines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="News Headlines"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"
                    android:background="@color/md_light_blue_100"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/beginners"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/md_light_green_50"
            app:contentPadding="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_investing_for_beginners"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/fa_icon_investing"
                    android:textSize="60sp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/fa_solid"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/tv_investing_for_beginners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Investing 101"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"
                    android:background="@color/md_light_green_100"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/brokerage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/md_purple_50"
            app:contentPadding="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_brokerage_firms"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/fa_icon_brokerage"
                    android:textSize="60sp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/fa_solid"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/tv_brokerage_firms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Brokerage Firms"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"
                    android:background="@color/md_purple_100"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/listed"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            app:contentPadding="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/icon_listed_companies"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/fa_icon_listed"
                    android:textSize="60sp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/fa_solid"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:id="@+id/tv_listed_companies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Listed Companies"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"
                    android:background="@color/md_blue_grey_100"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>