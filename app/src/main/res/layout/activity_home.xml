<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:weightSum="6"
    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/share_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/fg_color"
        app:contentPadding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/icon_share_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_trading"
                android:textSize="40sp"
                android:textColor="@color/md_pink_300"
                android:fontFamily="@font/fa_solid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_share_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Share Price"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/tv_share_price_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="4dp"
                    android:text="Same here"
                    android:textSize="12sp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/daily_commentary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/fg_color"
        app:contentPadding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/icon_daily_commentary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_commentary"
                android:textSize="40sp"
                android:textColor="@color/md_yellow_500"
                android:fontFamily="@font/fa_solid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_daily_commentary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Daily Commentary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/tv_daily_commentary_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="5dp"
                    android:text="Same here"
                    android:textSize="12sp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/news_headlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/fg_color"
        app:contentPadding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/icon_news_headlines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_headlines"
                android:textSize="40sp"
                android:textColor="@color/md_pink_100"
                android:fontFamily="@font/fa_solid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_news_headlines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="News Headlines"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/tv_news_headlines_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="4dp"
                    android:text="Same here"
                    android:textSize="12sp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/investing_for_beginners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/fg_color"
        app:contentPadding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/icon_investing_for_beginners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_investing"
                android:textSize="40sp"
                android:textColor="@color/md_light_green_200"
                android:fontFamily="@font/fa_solid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_investing_for_beginners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Investing 101"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/tv_investing_for_beginners_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="4dp"
                    android:text="Same here"
                    android:textSize="12sp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/brokerage_firms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/fg_color"
        app:contentPadding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/icon_brokerage_firms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_brokerage"
                android:textSize="40sp"
                android:textColor="@color/md_indigo_400"
                android:fontFamily="@font/fa_solid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_brokerage_firms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Brokerage Firms"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/tv_brokerage_firms_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="4dp"
                    android:text="Same here"
                    android:textSize="12sp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/listed_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/fg_color"
        app:contentPadding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/icon_listed_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_listed"
                android:textSize="40sp"
                android:textColor="@color/md_red_300"
                android:fontFamily="@font/fa_solid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_listed_companies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Listed Companies"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/tv_listed_companies_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="4dp"
                    android:text="Same here"
                    android:textSize="12sp"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>